{
  "name": "nestjs-service-skeleton",
  "version": "1.0.0",
  "description": "Skeleton for new nestjs services",
  "author": "alberthernandezdev@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlbertHernandez/nestjs-service-skeleton/issues"
  },
  "homepage": "https://github.com/AlbertHernandez/nestjs-service-skeleton#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertHernandez/nestjs-service-skeleton.git"
  },
  "keywords": [
    "typescript",
    "nestjs",
    "skeleton"
  ],
  "engines": {
    "node": ">=20.9",
    "npm": ">=10.2"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:clean && nest build --path tsconfig.prod.json",
    "start": "node dist/main.js",
    "start:dev": "nest start --debug 9229 --watch",
    "test": "rimraf coverage && concurrently 'npm:test:unit' 'npm:test:e2e' && npm run coverage:global",
    "test:unit": "jest tests/unit --coverageDirectory coverage/unit",
    "test:e2e": "jest tests/e2e --coverageDirectory coverage/e2e",
    "coverage:global": "npm run coverage:merge-test-results && npm run coverage:create-global-report",
    "coverage:merge-test-results": "istanbul-merge --out coverage/global/coverage-final.json coverage/unit/coverage-final.json coverage/e2e/coverage-final.json",
    "coverage:create-global-report": "istanbul report --include coverage/global/coverage-final.json --dir coverage/global/lcov-report html",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build:clean": "rimraf dist; exit 0"
  },
  "dependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "istanbul": "^0.4.5",
    "istanbul-merge": "^2.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
